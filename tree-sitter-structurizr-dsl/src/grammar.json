{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "structurizr_dsl",
  "word": "identifier",
  "rules": {
    "dsl": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_definition"
      }
    },
    "_definition": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "constant"
        },
        {
          "type": "SYMBOL",
          "name": "variable"
        },
        {
          "type": "SYMBOL",
          "name": "workspace_definition"
        },
        {
          "type": "SYMBOL",
          "name": "comment"
        }
      ]
    },
    "workspace_definition": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "workspace"
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "value"
          }
        },
        {
          "type": "SYMBOL",
          "name": "block"
        }
      ]
    },
    "_expression": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "identifier"
        }
      ]
    },
    "_statement": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_children"
        }
      ]
    },
    "block": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "_statement"
          }
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "identifier": {
      "type": "PATTERN",
      "value": "[A-Za-z_]+"
    },
    "value": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "\"|'"
        },
        {
          "type": "PATTERN",
          "value": "[^\\n\\r]+"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "substr"
          }
        },
        {
          "type": "PATTERN",
          "value": "[^\\n\\r]+"
        },
        {
          "type": "PATTERN",
          "value": "\"|'"
        }
      ]
    },
    "substr": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "${"
        },
        {
          "type": "SYMBOL",
          "name": "identifier"
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "constant": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "!const"
        },
        {
          "type": "SYMBOL",
          "name": "identifier"
        },
        {
          "type": "SYMBOL",
          "name": "value"
        }
      ]
    },
    "variable": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "!var"
        },
        {
          "type": "SYMBOL",
          "name": "identifier"
        },
        {
          "type": "SYMBOL",
          "name": "value"
        }
      ]
    },
    "_children": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "prop_name"
        },
        {
          "type": "SYMBOL",
          "name": "prop_description"
        }
      ]
    },
    "prop_name": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "name"
        },
        {
          "type": "SYMBOL",
          "name": "value"
        }
      ]
    },
    "prop_description": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "description"
        },
        {
          "type": "SYMBOL",
          "name": "value"
        }
      ]
    },
    "comment": {
      "type": "TOKEN",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SEQ",
            "members": [
              {
                "type": "STRING",
                "value": "/*"
              },
              {
                "type": "PATTERN",
                "value": "[^*]*\\*+([^/*][^*]*\\*+)*"
              },
              {
                "type": "STRING",
                "value": "/"
              }
            ]
          }
        ]
      }
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}

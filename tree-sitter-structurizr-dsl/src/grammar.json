{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "structurizr_dsl",
  "word": "identifier",
  "rules": {
    "dsl": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_definition"
      }
    },
    "_definition": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "constant"
        },
        {
          "type": "SYMBOL",
          "name": "variable"
        },
        {
          "type": "SYMBOL",
          "name": "_comment"
        },
        {
          "type": "SYMBOL",
          "name": "workspace_definition"
        }
      ]
    },
    "workspace_definition": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "workspace"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "string"
          }
        },
        {
          "type": "SYMBOL",
          "name": "block"
        }
      ]
    },
    "constant": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "!const"
        },
        {
          "type": "SYMBOL",
          "name": "_expression"
        },
        {
          "type": "SYMBOL",
          "name": "_value"
        }
      ]
    },
    "variable": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "!var"
        },
        {
          "type": "SYMBOL",
          "name": "_expression"
        },
        {
          "type": "SYMBOL",
          "name": "_value"
        }
      ]
    },
    "_expression": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "identifier"
        }
      ]
    },
    "block": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "_workspace_children"
          }
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "_value": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "string"
        }
      ]
    },
    "identifier": {
      "type": "TOKEN",
      "content": {
        "type": "PATTERN",
        "value": "[a-zA-Z0-9\\-_\\.]+"
      }
    },
    "number": {
      "type": "TOKEN",
      "content": {
        "type": "PATTERN",
        "value": "[0-9]+(\\.[0-9]+)?"
      }
    },
    "string": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "\"|'"
        },
        {
          "type": "PATTERN",
          "value": "[^\"'\\\\\\r\\n]+"
        },
        {
          "type": "PATTERN",
          "value": "\"|'"
        }
      ]
    },
    "hexcode_color": {
      "type": "TOKEN",
      "content": {
        "type": "PATTERN",
        "value": "#([0-9A-Za-f]{3}){1,2}"
      }
    },
    "substitution": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "${"
        },
        {
          "type": "SYMBOL",
          "name": "_expression"
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "_workspace_children": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "prop_name"
        },
        {
          "type": "SYMBOL",
          "name": "prop_description"
        }
      ]
    },
    "prop_name": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "name"
        },
        {
          "type": "SYMBOL",
          "name": "_value"
        }
      ]
    },
    "prop_description": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "description"
        },
        {
          "type": "SYMBOL",
          "name": "_value"
        }
      ]
    },
    "_comment": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "single_comment"
        },
        {
          "type": "SYMBOL",
          "name": "alt_single_comment"
        },
        {
          "type": "SYMBOL",
          "name": "multi_comment"
        }
      ]
    },
    "alt_single_comment": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "//"
        },
        {
          "type": "PATTERN",
          "value": "[^\\n\\r]*"
        }
      ]
    },
    "single_comment": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "#"
        },
        {
          "type": "PATTERN",
          "value": "[^\\n\\r]*"
        }
      ]
    },
    "multi_comment": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "/*"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "PATTERN",
              "value": "\\r?\\n"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "PATTERN",
              "value": "[^\\n\\r]*"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "PATTERN",
              "value": "\\r?\\n"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "*/"
        }
      ]
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
